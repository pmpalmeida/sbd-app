<% postsYAML = YAML.load(ERB.new(File.read("config/post.yml")).result(binding)) %>
<% posts = postsYAML.collect { |k, v| v } %>
<br>
<br>

<%= @post %>

<p>--------------</p>

<% posts.each do |post| %>
  <%= post["date"].html_safe %> <br>

  <iframe width="560" height="315" src=<%= post["video"] %>
 frameborder="0" allow="accelerometer; autoplay; encrypted-media; gyroscope; picture-in-picture" allowfullscreen></iframe>

 <img src=<%= post["photo"] %> alt="">
 <%= post["text"].html_safe %> <br>

  <%= link_to "Add to cart",
    :controller => "pages",
    :action => "home",
    :postID => post
  %>

  <%= link_to "Know more about us", post["link"] %>
<% end %>





