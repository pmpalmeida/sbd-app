                  <i class="fa fa-user"></i> <%= t(".profile", default: "Perfil") %>
                <% end %>
              <% end %>
            </li>
            <li>
              <%= link_to root_path do %>
                <i class="fa fa-bullhorn"></i> <%= t(".settings", default: "Blog") %>
              <% end %>
            </li>
            <li>
              <%= link_to root_path do %>
                <div class="navbar-wagon-link-btn btn btn-danger">
                  <i class="fa fa-cog"></i>  <%= t(".settings", default: "Vídeos") %>
                </div>
              <% end %>
            </li>
            <li>
              <%= link_to root_path do %>
                <i class="fa fa-info-circle"></i> <%= t(".settings", default: "Contato") %>
              <% end %>
            </li>
            <li>
              <%= link_to root_path do %>
                <i class="fa fa-info-circle"></i> <%= t(".settings", default: "Sobre") %>
              <% end %>
            </li>
            <li>
              <%= link_to destroy_user_session_path, method: :delete do %>
                <i class="fa fa-sign-out"></i>  <%= t(".sign_out", default: "Sair") %>
              <% end %>
            </li>

          </ul>
        </div>
      </div>

    <% else %>

      <div class="navbar-wagon-item">
        <div class="dropdown">
          <i class="fa fa-bars dropdown-toggle" data-toggle="dropdown"></i>
          <ul class="dropdown-menu dropdown-menu-right navbar-wagon-dropdown-menu">
            <li>
              <%= link_to new_user_registration_path do %>
                <div class="navbar-wagon-link-btn btn btn-danger">
                  <i class="fa fa-cog"></i>  <%= t(".settings", default: "Cadastro/Login") %>
                </div>
              <% end %>
            </li>
            <li>
              <%= link_to root_path do %>
                <i class="fa fa-bullhorn"></i>  <%= t(".settings", default: "Blog") %>
              <% end %>
            </li>
            <li>
              <%= link_to root_path do %>
                <i class="fa fa-bullhorn"></i>  <%= t(".settings", default: "Vídeos") %>
              <% end %>
            </li>
            <li>
              <%= link_to root_path do %>
                <i class="fa fa-bullhorn"></i>  <%= t(".settings", default: "Contato") %>
              <% end %>
            </li>
            <li>
              <%= link_to root_path do %>
                <i class="fa fa-cog"></i>  <%= t(".settings", default: "Sobre") %>
              <% end %>
            </li>
          </ul>
        </div>
      </div>

    <% end %>


  </div>

</div>

</div> <!-- div para hide de menu bar -->

</div>
